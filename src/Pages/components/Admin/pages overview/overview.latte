
{if $pagesCount > 0 or $hiddenOnNoPages === false}

{control flashMessages}

<div class="articles-overview-title">
    <h2 n:ifset="$title" id="{$control->getUniqueId()}"><i n:ifset="$icon" class="fa fa-{$icon} fa-fw"></i>{_$title}</h2>
</div>

<div class="box box-river">
    {snippet table}

    <div class="table-content">

        {*{control vs}*}
        {*{if count($pages) > 0}*}
        <table class="table table-bordered">
            <tr>
                {translator pagesOverview.rowTitle}
                {*<th class="w25">#</th>*}
                <th class="w100">{_created|firstUpper}</th>
                <th class="w100">{_published|firstUpper}</th>
                <th>{_article|firstUpper}</th>
                <th class="w100">{_action|firstUpper}</th>
                {/translator}
            </tr>

            {if $pagesCount > 0}
            {foreach $pages as $pageData}
            {var $page = $pageData[0]}
            {var $commentsCount = $pageData['commentsCount']}
                <tr>
                    {*<td>{$page->getId()}</td>*}
                    <td>{$page->createdAt|date:'j.n.Y'} <br>v {$page->createdAt|date:'H:i'}</td>
                    <td>{$page->publishedAt|date:'j.n.Y'} <br>v {$page->publishedAt|date:'H:i'}</td>
                    <td>
                        <a href="{plink :Pages:Front:Page:show internal_id => $page->id}" class="article-name">{$page->title}</a>
                        <div class="article-mini-tags" n:if="!empty($page->getTags())">
                            {foreach $page->getTags() as $tag}
                                <span style="background-color: {$tag->color|noescape}">{$tag->name}</span>
                            {/foreach}
                        </div>
                        <div n:if="$commentsCount > 0"><a href="{plink :Pages:Front:Page:show internal_id => $page->getId()}#comments">{_pagesOverview.hasComments, $commentsCount}</a></div>
                    </td>
                    <td>
                        <div class="articles-overview-actions">
                            {translator pagesOverview.actions}
                            <a href="{plink :Pages:Admin:Page:edit id => $page->id}" class="btn btn-river"><i class="fa fa-edit"></i> {_edit}</a>
                            {*<a n:if="$page->isPublished === false" href="{link publishArticle, id => $page->id}" class="ajax btn btn-turquoise"><i class="fa fa-thumbs-o-up"></i> Publikovat</a>
                            <a n:if="$page->isPublished === true" href="{link hideArticle, id => $page->id}" class="ajax btn btn-asphalt"><i class="fa fa-thumbs-o-down"></i> Nepublikovat</a>*}
                            <a href="{plink :Pages:Admin:Page:remove id => $page->id}" class="btn btn-red" title="Smazání článku"><i class="fa fa-trash"></i> <span>{_remove}</span></a>
                            {/translator}
                        </div>
                    </td>
                </tr>
            {/foreach}
            {else}
                <tr><td colspan="5">{_pagesOverview.noArticlesFound}</td></tr>
            {/if}
        </table>
        {control vs}

    </div>
    {/snippet}
</div>
{/if}