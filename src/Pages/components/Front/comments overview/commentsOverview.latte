
{if !empty($comments)}
    <ol class="comments-list">
        {foreach $comments as $id => $comment}
            <li id="comment-{$id}">{control comment-$id $iterator->getCounter()}</li>
        {/foreach}
    </ol>
{else}
    <p n:if="$page->allowedComments === true and $page->isDraft() === false">Článek neobsahuje žádné komentáře.</p>
{/if}