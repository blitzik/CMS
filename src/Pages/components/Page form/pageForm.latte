    <h2 n:ifset="$page">{$page->title}</h2>
    <div class="box box-river"> {* just div *}
        <div class="row">
            <div class="form-group article-url">
                {label url /} | <span>Pokud není vyplněna, vytvoří se URL adresa z titulku stránky</span>
                <div class="input-group">
                    <div class="input-group-addon">{$baseUrl} / </div>
                    {input url class => 'form-control'}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group article-publish-time">
                {label publishedAt /}
                {input publishedAt class => 'form-control'}
            </div>

            <div class="form-group article-title">
                {label title /}
                    <small>[max. {Pages\Page::LENGTH_TITLE} znaků]</small>
                    <span id="page-title-counter" class="right"></span>
                {input title class => 'form-control'}
            </div>
        </div>

        <div class="row ">
            <div class="article-intro">
                <div class="form-group">
                    {label intro /}
                        <small>[max. {Pages\Page::LENGTH_INTRO} znaků] (Bude zobrazen ve výpisu článků)</small>
                        <span id="page-intro-counter" class="right"></span>
                    {input intro class => 'form-control page-textArea'}
                </div>

                <div class="form-group">
                    {label text /}
                    {input text class => 'form-control page-textArea'}
                </div>

                {snippet messages-bottom}
                    {control flashMessages}
                    {customFormErrors}
                {/snippet}

                {input saveAndPublish class => 'btn btn-turquoise', title => 'Uloží článek, který bude veřejně přístupný'}
                {input saveAndHide class => 'btn btn-river', title => 'Uloží článek, ale nezobrazí ho veřejně'}

                <a href="#top" class="right">vrátit se na začátek stránky <i class="fa fa-level-up"></i></a>
            </div>
        </div>
    </div>
</div> {* end article-form col *}

<div class="tags-picking-box"> {* col *}
<a href="{plink :Tags:Tag:default}">+ přidat štítek</a>
<h2>Štítky</h2>
    <div class="box box-turquoise">
        {*<div class="row">*}
            {*<div class="article-tags">*}
                {control pageTagsPicking}
            {*</div>*}
        {*</div>*}
    </div>
</div> {* end tags-picking-box *}
{/form}