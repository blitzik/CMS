<!DOCTYPE html>
<html>
<head>
    {control metas}

	{control pageTitle}

    <link rel="icon" href="{$basePath}/favicon.ico?v=1" type="image/x-icon">

	{block styles}
		<link rel="stylesheet" href="{$basePath}/assets/css/admin.min.css?v=043">
	{/block}
</head>
<body>
<div class="page-wrapper">

    <input type="radio" name="nav" id="nav-expand" class="nav-control-hidden">
    <label for="nav-expand" id="navigation">MENU</label>
    <aside class="main-sidebar">
        <div class="main-header">
            <h1>
                <a n:href=":Dashboard:Dashboard:default">
                    <span class="logo-mini">{_admin.logoTitle.mini}</span>
                    <span class="logo-large">{_admin.logoTitle.large}</span>
                </a>
            </h1>
        </div>

        {translator admin.navigation}
        <nav class="navigation">
        	<ul>
        	    <li class="nav-heading"><span>{_title}</span></li>
        	    <li><a n:href=":Dashboard:Dashboard:default" n:class="$this->presenter->isLinkCurrent(':Dashboard:Dashboard:default') ? active"><i class="fa fa-dashboard fa-fw"></i> <span>{_items.dashboard}</span></a></li>
        	    <li><a n:href=":Pages:Admin:Page:new" n:class="$this->presenter->isLinkCurrent(':Pages:Admin:Page:new') ? active"><i class="fa fa-pencil fa-fw"></i> <span>{_items.newPage}</span></a></li>
        	    <li><a n:href=":Pages:Admin:Page:overview" n:class="$this->presenter->isLinkCurrent(':Pages:Admin:Page:overview') ? active"><i class="fa fa-list fa-fw"></i> <span>{_items.pagesOverview}</span></a></li>
                <li><a n:href=":Tags:Tag:default" n:class="$this->presenter->isLinkCurrent(':Tags:Tag:default') ? active"><i class="fa fa-tags fa-fw"></i> <span>{_items.tags}</span></a></li>
        	    <li><a n:href=":Images:Image:default"n:class="$this->presenter->isLinkCurrent(':Images:Image:default') ? active"><i class="fa fa-image fa-fw"></i> <span>{_items.images}</span></a></li>
        	    <li><a n:href=":Options:Options:default" n:class="$this->presenter->isLinkCurrent(':Options:Options:default') ? active"><i class="fa fa-cog fa-fw"></i> <span>{_items.options}</span></a></li>
                <li n:class="$this->presenter->isLinkCurrent(':Users:Admin:Users:*') ? active">
                    <input type="checkbox" id="item-users" class="nav-control-hidden"{if $this->presenter->isLinkCurrent(':Users:Admin:Users:*')} checked{/if}>
                    <a n:class="parent, $this->presenter->isLinkCurrent(':Users:Admin:Users:*') ? active"><label for="item-users"><i class="fa fa-users fa-fw"></i> <span>{_items.users.title}</span></label></a>
                    <ul>
                        <li><a n:href=":Users:Admin:Users:default" n:class="$this->presenter->isLinkCurrent(':Users:Admin:Users:default') ? active"><span>{_items.users.items.overview}</span></a></li>
                        <li><a n:href=":Users:Admin:Users:roles" n:class="$this->presenter->isLinkCurrent(':Users:Admin:Users:roles') ? active"><span>{_items.users.items.roles}</span></a></li>
                    </ul>
                </li>
        	</ul>
        </nav>
        {/translator}
    </aside>

    <div class="content-wrapper">
        <div class="top-header-bar">
            <div class="header-bar-actions">
                <a n:href=":Users:Front:Auth:logout" class="logout"><i class="fa fa-sign-out fa-fw"></i><span> {_admin.navigation.items.signOut}</span></a>
            </div>

            <div class="left-bar">
                <div class="user"><i class="fa fa-user"></i>{$userEntity->getUsername()}</div>
                <div class="languages">{control localeSwitcher}</div>
            </div>
        </div>

	    <div class="content"> {* container *}
            {rowCol heading, row => page-heading}
                <h2>{control pageTitle, false}</h2>
            {/rowCol}

            {rowCol body}
	            {control flashMessages}
		        {include #content}
            {/rowCol}
	    </div>
    </div>

    <label for="nav-collapse" class="overlay"></label>
    <label for="nav-collapse" class="close-menu">ŽAVŘÍT MENU</label>
    <input type="radio" name="nav" id="nav-collapse" checked class="nav-control-hidden">

</div>

{block scripts}
	<script src="{$basePath}/assets/js/js.min.js"></script>
{/block}
</body>
</html>
